<% content_for :title, "Secret keys" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Secret keys</h1>
    <%= link_to "New secret key", new_api_secret_key_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="api_secret_keys" class="min-w-full">
    <% if @api_secret_keys.any? %>
      <% @api_secret_keys.each do |api_secret_key| %>
        <%= render api_secret_key %>
        <p>
          <%= link_to "Show this secret key", api_secret_key, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No secret keys found.</p>
    <% end %>
  </div>
</div>
